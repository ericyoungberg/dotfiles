! Enable meta keys (like Alt) in Xterm
xterm*metaSendsEscape: true


!-## URxvt 

! Settings
URxvt.loginShell: true
URxvt.cursorBlink: true
URxvt.perl-ext-common: selection-to-clipboard
URxvt.clipboard.autocopy: false

! Font
URxvt.font: xft:Hack:pixelsize=11:antialias=true

! Window
URxvt.depth: 32
URxvt.scrollBar: false

! special
*.foreground:   #0070ff
*.background:   #000000
*.cursorColor:  #0070ff

! black
*.color0:       #000000
*.color8:       #264d80

! red
*.color1:       #264d80
*.color9:       #264d80

! green
*.color2:       #336681
*.color10:      #0070ff

! yellow
*.color3:       #336681
*.color11:      #264d80

! blue
*.color4:       #264d80
*.color12:      #4d9aff

! magenta
*.color5:       #0070ff
*.color13:      #0070ff

! cyan
*.color6:       #003780
*.color14:      #006eff

! white
*.color7:       #4d9aff
*.color15:      #4d9aff


! vim: set ft=xdefaults:
